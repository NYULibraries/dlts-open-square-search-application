{
  "name": "open-square-search-application",
  "version": "0.0.1",
  "description": "Vue.js search SPA for the DLTS Open Square website.",
  "author": "David <da70@nyu.edu>",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build:dev": "vue-cli-service build --mode dev",
    "build:stage": "vue-cli-service build --mode stage",
    "build:prod": "vue-cli-service build --mode prod",
    "deploy:dev": "yarn run build:dev; rsync --archive --compress --delete --human-readable --verbose dist/ devweb1:/www/sites/open-square-search-application/; yarn test:browser:dev",
    "deploy:stage": "yarn run build:stage; rsync --archive --compress --delete --human-readable --verbose dist/ stageweb1:/www/sites/open-square-search-application/; yarn test:browser:stage",
    "deploy:prod": "yarn run build:prod; rsync --archive --compress --delete --human-readable --verbose dist/ web1:/www/sites/open-square-search-application//; yarn test:browser:prod",
    "lint": "vue-cli-service lint",
    "test": "npm run test:browser:local",
    "test:browser:local": "node_modules/.bin/wdio tests/browser/conf/wdio.local.conf.js",
    "test:browser:local:debug:chrome": "node_modules/.bin/wdio tests/browser/conf/wdio.local.debug-chrome.conf.js",
    "test:browser:local:debug:firefox": "node_modules/.bin/wdio tests/browser/conf/wdio.local.debug-firefox.conf.js",
    "test:browser:dev": "node_modules/.bin/wdio tests/browser/conf/wdio.dev.conf.js",
    "test:browser:stage": "node_modules/.bin/wdio tests/browser/conf/wdio.stage.conf.js",
    "test:browser:prod": "node_modules/.bin/wdio tests/browser/conf/wdio.prod.conf.js"
  },
  "dependencies": {
    "font-awesome": "4.7.0",
    "vue": "^2.5.17",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.0",
    "@vue/cli-plugin-unit-mocha": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-eslint": "^10.0.1",
    "chai": "^4.1.2",
    "chromedriver": "^2.31.0",
    "command-exists": "^1.2.7",
    "dlts-solr-fake": "https://github.com/nyulibraries/dlts-solr-fake#v0.1.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "json-stable-stringify": "^1.0.1",
    "node-sass": "^4.9.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.17",
    "wdio-chromedriver-service": "^0.1.3",
    "wdio-mocha-framework": "^0.6.3",
    "wdio-screenshots-cleanup-service": "0.0.7",
    "wdio-selenium-standalone-service": "0.0.11",
    "wdio-spec-reporter": "^0.1.5",
    "wdio-visual-regression-service": "^0.9.0",
    "webdriverio": "^4.13.2"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  }
}
